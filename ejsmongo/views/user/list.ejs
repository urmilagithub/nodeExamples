<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>
<div class="" style="width:850px; margin-left:20px; margin-top:20px;">

<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>	

<table class="table table-bordered" id="user-table">
	<thead>
		<tr class="success">
			<th width="5%">Sr. no.</th>
			<th>Name</th>
			<th>Age</th>
			<th>Email</th>
			<!--<th>Address</th>
			<th>Phone</th>
			<th>DOB</th>-->
			<th>Action</th>
		</tr>
	</thead>
	<!--
		Using FOREACH LOOP for the users array
		
		myArray.forEach(function(el, index) {
			// el - current element, i - index
		});
	-->
	<% if (data) {	
		var i = 1;%>
	<% data.forEach(function(user){ %>
		<tr class="basic">
			<td><%= i %></td>
			<td><%= user.name %></td>
			<td><%= user.age %></td>
			<td><%= user.email %></td>
			<!--<td><%= user.address %></td>
			<td><%= user.phone %></td>
			<td><%= user.dob %></td>-->
			<td>
				<div style="float:left; margin-bottom:-16px;">
					<a href='/users/edit/<%= user._id %>'><button class="btn-xs btn-success">Edit</button></a> &nbsp;							
					<form method="post" action="/users/delete/<%= user._id %>" style="float:right">
						<button type="submit" name="delete" value='Delete' class="btn-xs btn-danger" onClick="return confirm('Are you sure you want to delete?')">Delete</button>
						<input type="hidden" name="_method" value="DELETE" />
					</form>
				</div>
			</td>
		</tr>
	<% i=i+1;
	}) %>
	<% } %>

</table>
</div>
<!--
including footer content which is common for all pages
-->
<%- include ../layouts/footer.ejs %>
